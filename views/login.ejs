<main class="form-signin w-100 m-auto">
  <form>
    <h1 class="h3 mb-3 fw-normal">ورود به بخش مدیریت</h1>

    <div class="form-floating">
      <label for="floatingInput">آدرس ایمیل</label>
      <input
        type="email"
        class="form-control"
        id="floatingInput"
        placeholder="name@example.com"
      />
    </div>
    <div class="form-floating">
      <label for="floatingPassword">پسورد</label>
      <input
        type="password"
        class="form-control"
        id="floatingPassword"
        placeholder="پسورد"
      />
    </div>

    <div class="checkbox mb-3">
      <label>
        <input type="checkbox" value="remember-me" /> من را به خاطر بسپار
      </label>
    </div>
    <button class="w-100 btn btn-lg btn-primary" type="submit">ورود</button>
  </form>
</main>
